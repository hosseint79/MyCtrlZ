@model Core.ArticleViewModel

@{
    ViewData["Title"] = "CreateArticle";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

    <div class="col-md-8 col-12 bg-panel p-2 p-md-4 mb-4 rounded">

        <form asp-action="CreateArticle" class="container bg-white rounded p-2 p-md-4 my-2">
            <div class="form-header mb-4"> اضافه کردن اسلاید </div>
            <div class="p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mb-3">
                    <input asp-for="Title" class="form-control" />
                    <div class="input-group-append">
                        <label asp-for="Title" class="input-group-text"></label>
                    </div>

                </div>
                <span asp-validation-for="Title" class="text-danger mb-2">عنوان را وارد کنید </span>
                <div class="input-group mb-3">
                    <input asp-for="Describtion" class="form-control" />

                    <div class="input-group-append">
                        <label asp-for="Describtion" class="input-group-text"></label>
                    </div>

                </div>
                <span asp-validation-for="Describtion" class="text-danger mb-2"> عنوان را وارد کنید .....  </span>

                <div class="input-group mb-3">
                    <label asp-for="Text" for="comment"></label>
                    <textarea asp-for="Text" class="form-control" rows="5" id="comment"></textarea>

                </div>
                <span asp-validation-for="Text" class="text-danger mb-2">عنوان را وارد کنید ..... </span>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="ShowSlide" /> @Html.DisplayNameFor(model => model.ShowSlide)
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ArticlePicture" class="control-label"></label>
                    <input asp-for="ArticlePicture" class="form-control" />
                    <span asp-validation-for="ArticlePicture" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>

        </form>

    </div>


@section Scripts{
<script src="~/CKEditor_HTML/CKEditor_HTML/ckeditor/ckeditor.js"></script>
<script src="~/CKEditor_HTML/CKEditor_HTML/ckeditor/adapters/jquery.js"></script>
    <script>

        $(function () {
            $("#comment").ckeditor();
        });

    </script>

}